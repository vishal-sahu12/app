<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Miwok" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/category_family</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan_background</item>
        <item name="colorSecondaryVariant">@color/tan_background</item>
        <item name="colorOnSecondary">@color/category_family</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="basic_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@android:color/black</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>
</resources>